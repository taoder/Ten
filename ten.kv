#:kivy 1.8.0
#:import random random.random

<TenEmpty>:
    size: 1, 1
    canvas.before:
        PushMatrix
        Translate:
            xy: self.x, self.y
        Scale:
            xyz: self.scale, self.scale, 0
    canvas:
        Color:
            hsv: self.index / 9., .8, .8
        Rectangle:
            size: self.size
        Color:
            rgba: 1, 0, 0, self.index % 2
        Ellipse:
            pos: .25, .25
            size: .5, .5
        Color:
            rgba: 0, 1, 0, (self.index + 1) % 2
        Rectangle:
            pos: .25, .25
            size: .5, .5
    canvas.after:
        PopMatrix

<TenSquare>:
    canvas:
        Color:
            rgb: 0x8C / 255., 0x8B / 255., 0x8C / 255.
		Rectangle:
			pos: self.pos
			size: self.size

<TenRound>:
    canvas:
        Color:
	        rgb: 0xb2 / 255., 0x89 / 255., 0x46 / 255.
		Ellipse:
			pos: self.pos
			size: self.size

<TenBoardLayout>:
    canvas:
        Color:
            hsv: .1, .3, .8
        Rectangle:
            pos: self.pos
            size: self.size

<TenBoard>:
    size: 1, 1
