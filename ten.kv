#:kivy 1.8.0

<TenEmpty>:
    canvas:
        Color:
            rgb: 0x47 / 255., 0x45 / 255., 0x46 / 255.
		Ellipse:
			pos: self.pos
			size: self.size

<TenSquare>:
    canvas:
        Color:
            rgb: 0x8C / 255., 0x8B / 255., 0x8C / 255.
		Rectangle:
			pos: self.pos
			size: self.size

<TenRound>:
    canvas:
        Color:
	        rgb: 0xb2 / 255., 0x89 / 255., 0x46 / 255.
		Ellipse:
			pos: self.pos
			size: self.size

<TenBoard>
    on_size: self.reposition()
	on_pos: self.reposition()

<TenPlaceholder>:
    item: item
    AnchorLayout:
        id: anchor
        TenBoard:
            id: item
            size_hint: None, None
			size: [min(anchor.width, anchor.height)] * 2

<TenGame>:
    GridLayout:
        id: grid
        rows: 3
        cols: 3
        canvas:
            Color:
                rgb: 0x3F / 255., 0x3C / 255., 0x3E / 255.
            Rectangle:
                pos: self.pos
                size: self.size
        TenPlaceholder:
            id: board1
        TenPlaceholder:
            id: board2
        TenPlaceholder:
            id: board3
        TenPlaceholder:
            id: board4
        TenPlaceholder:
            id: board5
        TenPlaceholder:
            id: board6
        TenPlaceholder:
            id: board7
        TenPlaceholder:
            id: board8
        TenPlaceholder:
            id: board9