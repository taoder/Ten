#:kivy 1.8.0
#:import random random.random

<TenEmpty>:
    size: 1, 1
    canvas:
        Color:
            hsv: self.index / 9., .8, .8
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 1, 0, 0, self.index % 2
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0, 1, 0, (self.index + 1) % 2
        Rectangle:
            pos: self.pos
            size: self.size

<TenSquare>:
    canvas:
        Color:
            rgb: 0x8C / 255., 0x8B / 255., 0x8C / 255.
		Rectangle:
			pos: self.pos
			size: self.size

<TenRound>:
    canvas:
        Color:
	        rgb: 0xb2 / 255., 0x89 / 255., 0x46 / 255.
		Ellipse:
			pos: self.pos
			size: self.size

<TenBoardLayout>:
    canvas:
        Color:
            hsv: .1, .3, .8
        Rectangle:
            pos: self.pos
            size: self.size

<TenBoard>:
    size: 1, 1
    GridLayout:
        id: anchor
        size: root.size
        pos: root.pos
        spacing: '10dp'
        padding: '15dp'
        rows: 3
        cols: 3
        TenEmpty:
            id: cell1
            index: 1
        TenEmpty:
            id: cell2
            index: 2
        TenEmpty:
            id: cell3
            index: 3
        TenEmpty:
            id: cell4
            index: 4
        TenEmpty:
            id: cell5
            index: 5
        TenEmpty:
            id: cell6
            index: 6
        TenEmpty:
            id: cell7
            index: 7
        TenEmpty:
            id: cell8
            index: 8
        TenEmpty:
            id: cell9
            index: 9
